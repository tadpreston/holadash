<fieldset class="fieldset">
  <%= form_for([:administration,@region,@club]) do |f| %>
    <% if @club.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@club.errors.count, "error") %> prohibited this club from being saved:</h2>

        <ul>
        <% @club.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <p class="button-height inline-label">
      <%= f.label :name, "Club Name", class: 'label' %>
      <%= f.text_field :name, class: 'input' %>
    </p>

    <p class="inline-label">
      <%= f.label :address, "Address", class: 'label' %>
      <%= f.text_area :address, class: 'input autoexpanding' %>
    </p>

    <p class="button-height">
      <span class="button-group">
        <%= f.submit class: 'button icon-download' %>
        <%= link_to 'Cancel', [:administration, @region], class: 'button' %>
      </span>
    </p>
  <% end %>
</fieldset>
